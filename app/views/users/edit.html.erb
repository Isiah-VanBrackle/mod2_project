<h3>Edit or Delete your Account<h3>
<%= form_for(@user) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <br>
  <%= f.submit "Edit your Account Information" %>
<% end %>
<%= form_tag user_path(@user), method: 'delete' do %>
  <%= submit_tag "Delete your Account" %>
<% end %>
