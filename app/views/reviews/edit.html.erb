<center>
 <h1>Edit Review</h1>
 </center>
 <div class="row">
 <div class="col-md-6 col-md-offset-3">
<%= form_for(@review) do |f|%>
  <%= f.label :comment %>
  <%= f.text_area :comment, class: 'form-control' %>
  <br>
  <%= f.label :rating %>
  <%= f.number_field :rating,  class: 'form-control' %>
  <br>
  <%= f.label :book_id %>
  <br>
  <%= f.collection_select :book_id, Book.all, :id, :title,  class: 'form-control' %>
  <br><br>
  <center>
  <%= f.submit "Create Review", class: "btn btn-primary"%>
  </center>
<% end %>

</div>
</div>

