<% provide(:title, 'Review this Book ') %>
<h1>Review this book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@review) do |f|%>
      <%= f.label :comment %>
      <%= f.text_area :comment, class: 'form-control' %>
      <br>
      <%= f.label :rating %>
      <%= f.number_field :rating, class: 'form-control' %>
      <br>
      <%= f.label :book_id %>
      <%= f.collection_select :book_id, Book.all, :id, :title, class: 'form-control' %>
      <br>
      <%= f.submit "Review this Book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
